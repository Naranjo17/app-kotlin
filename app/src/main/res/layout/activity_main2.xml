<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity2">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ingresar estudiantes"
        android:textAlignment="center"
        android:textSize="25dp"
        />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <EditText
                android:id="@+id/txtName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:layout_marginTop="5dp"
                android:hint="Nombre"

                />



            <EditText
                android:id="@+id/txtEdad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="numberSigned"
                android:layout_marginTop="5dp"
                android:hint="Edad"
                />



            <EditText
                android:id="@+id/txtTelefono"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="numberSigned"
                android:layout_marginTop="5dp"
                android:hint="Telefono"
                />

            <EditText
                android:id="@+id/txtDireccion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:layout_marginTop="5dp"
                android:hint="Direccion"
                />
        </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ingresar materias"
                android:textAlignment="center"
                android:textSize="25dp"
                android:layout_marginTop="5dp"
                />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/Materia1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Type the course"
            android:textSize="20dp"
            android:layout_margin="5dp"
            android:layout_weight="1"/>

        <EditText
            android:id="@+id/nota1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:hint="Note"
            android:textSize="20dp"
            android:layout_margin="5dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/Materia2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Type the course"
            android:textSize="20dp"
            android:layout_margin="5dp"
            android:layout_weight="1"/>

        <EditText
            android:id="@+id/nota2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:hint="Note"
            android:textSize="20dp"
            android:layout_margin="5dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/Materia3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Type the course"
            android:textSize="20dp"
            android:layout_margin="5dp"
            android:layout_weight="1"/>

        <EditText
            android:id="@+id/nota3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:hint="Note"
            android:textSize="20dp"
            android:layout_margin="5dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/Materia4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Type the course"
            android:textSize="20dp"
            android:layout_margin="5dp"
            android:layout_weight="1"/>

        <EditText
            android:id="@+id/nota4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:hint="Note"
            android:textSize="20dp"
            android:layout_margin="5dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/Materia5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Type the course"
            android:textSize="20dp"
            android:layout_margin="5dp"
            android:layout_weight="1"/>

        <EditText
            android:id="@+id/nota5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:hint="Note"
            android:textSize="20dp"
            android:layout_margin="5dp" />

    </LinearLayout>



    <Button
        android:id="@+id/btnRegistrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="160dp"
        android:background="@color/black"
        android:text="Registrar"
        android:textColor="@color/white"

        >

    </Button>

</LinearLayout>




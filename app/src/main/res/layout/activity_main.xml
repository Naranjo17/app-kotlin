<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="40dp"
        android:gravity="center"
        android:textAlignment="center"
        android:text="Mis pequeños saltamontes"
        android:textSize="28dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bienvenidos al colegio mis pequeños saltamontes aqui podran encontrar la informacion basica de los estudiantes y ver sus notas."
        android:textSize="25dp"
        android:layout_margin="10sp"
        />

    <Button
        android:id="@+id/btnEstudiantes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ingresar estudiantes"
        android:layout_margin="20dp"
        />

    <Button
        android:id="@+id/btnEstadisticas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Estadisticas" />

    <Button
        android:id="@+id/btnAyuda"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Ayuda"
        />


</LinearLayout>